default:
    suites:
        default:
            contexts:
                - Behat\MinkExtension\Context\MinkContext
                - behatch:context:system
                - behatch:context:rest
                - behatch:context:json
                - FeatureContext

    extensions:
        Behat\MinkExtension:
            default_session: symfony2
            sessions:
                symfony2:
                    goutte: ~
            base_url: http://localhost:8000
        Behatch\Extension: ~
        Doyo\Behat\Coverage\Extension:
            sessions:
                console: ~
                coverage: ~
                index: ~
                live: ~
            filter:
                - directory: src/*.php
                  exclude:
                      - src/Resources
            report:
                php: build/cov/behat.cov
                html:
                    target: build/behat
                    lowUpperBound: 30
                    highLowerBound: 90
